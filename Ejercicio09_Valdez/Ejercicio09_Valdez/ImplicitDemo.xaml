<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio09_Valdez.ImplicitDemo">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
                <Setter Property="BackgroundColor" Value="Black" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="0,20,0,0">
            <Entry Text="Estas son los ejemplos " />
            <Entry Text="de estilos implicitos de"/>
            <Entry Text="Valdez Rodriguez" />
            <Entry Text="Diego Andres Ernesto" 
                   BackgroundColor="Lime" TextColor="Red" />
            <Entry Text="Subclassed Entry is not receiving the style"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
