<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio09_Valdez.CascadingStyleSheets">
    <ContentPage.Resources>
        <StyleSheet Source="Assets/styles.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            <StackLayout Orientation="Vertical">
                <Entry Placeholder="Nombre"></Entry>
                <Entry Placeholder="Contraseña"></Entry>
                <Entry Placeholder="Correo Electronico" ></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <CheckBox></CheckBox>
                <Label Text="desde otro servicio"></Label>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Give-Up"></Button>
                <Button x:Name="signup" Text="Sign-Up"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>